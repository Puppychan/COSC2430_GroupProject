<div class="text-center pt-24 pb-0">
  <p class="lg:text-5xl text-3xl font-medium">Order Summary</p>
  <p class="lg:text-xl mt-4 text-xl text-gray-400">Check your items before finish your order</p>
</div>
<section class="px-5 sm:px-10 lg:px-12 xl:px-32 lg:flex lg:flex-row justify-center gap-10 xl:gap-20">
  <div class="py-24 lg:py-48 justify-items-center text-lg ">
    <% if (userRole==="customer" ) { %>
    <div class="w-[90vw] md:w-[60vw] lg:w-[400px] px-10 lg:px-5 py-10 lg:py-6 mx-auto bg-gray-800 
        mb:flex rounded-xl shadow-inner shadow-2 ">
      <h3 class="text-2xl dark:text-white font-semibold text-gray-800 text-center ">Shipping Information
      </h3>
      <section class="mt-6 md:mt-8
          grid grid-cols-2 w-full gap-y-4 xl:gap-y-12 md:justify-start md:gap-x-6 lg:gap-x-3
          items-center justify-start self-center
          md:px-2 py-10 border-y-2 border-gray-600
            ">
        <header class="col-start-1 row-start-1 text-xl dark:text-white font-semibold text-center md:text-left text-gray-800">
          Name
        </header>
        <p class="col-start-1 row-start-2 md:row-start-1 md:col-start-2 w-full dark:text-gray-300 text-center md:text-left text-md text-gray-600">
          <%= user?.name %>
        </p>

        <header class="col-start-2 row-start-1 md:row-start-2 md:col-start-1 text-xl dark:text-white font-semibold text-center md:text-left text-gray-800">
          Shipping Address
        </header>
        <p class="col-start-2 row-start-2 w-full line-clamp-2 dark:text-gray-300 text-center md:text-left text-md text-gray-600">
          <%= user?.address %>
        </p>
      </section>
      <div class="flex items-center justify-between mt-14 mb-12">
        <p class="text-2xl font-bold text-white-900 ">Total</p>
        <p class="text-xl font-semibold text-white-900 ">
          <%= formatCurrency(cart.totalPrice) %>
        </p>
      </div>
      <form action="<%= navigatePage("place-order") %>" method="post">
        <div class="shipper-info role-info" id="hub">
          <div class="inputBox flex flex-col">
            <label for="hubid" class="block mb-2 text-xl font-medium text-gray-900 dark:text-white mb:text-center">Distribution
              Hub</label>
            <select required class="bg-gray-50 border border-gray-300 text-gray-900
                                    sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block
                                    w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400
                                    dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" id="hub" name="hubid">
              <option value="" disabled selected>Choose your Distribution Hub</option>
              <% hubs.forEach(hub => { %>
              <option value="<%= hub._id %>"><%= hub.name %></option>

              <% }) %>
            </select>
          </div>
        </div>
        <input type="text" name="_id" value="<%= user?._id %>" class="hidden">
        <div class="mt-12 flex justify-center">
          <button type="submit" class="inline-flex items-center justify-center w-full rounded-lg px-6 py-3 text-lg font-semibold text-white bg-blue-500 hover:bg-blue-600">
            Place Order
          </button>
        </div>
      </form>
    </div>
    <% } %>
  </div>
  <div class="lg:py-20 py-10 flex items-center justify-center xl:max-w-2xl">
    <div class="space-y-3 rounded-2xl border-[3px] border-gray-600 py-20 px-0.5 sm:px-2 lg:px-8 xl:px-11 w-full md:w-auto">
      <div class="flow-root">
        <ul class="-my-8 max-h-[70vh] overflow-y-scroll">
          <% cart.items.forEach(item=> {%>
          <li class="flex flex-col space-y-1 border-solid border-0 border-w-700 bg-gray-800 rounded-xl py-1 text-left sm:flex-row sm:space-x-5 sm:space-y-0 mb-7 p-4">
            <div class="shrink-0 py-3.5 justify-center flex">
              <img class="w-full h-44 sm:w-28 sm:h-28 md:h-20 md:w-20 max-w-full rounded-lg object-cover mt-1 " src="<%= item.product.image %>" alt="" />
            </div>

            <div class="grid grid-cols-1 md:grid-cols-4 gap-x-3 items-center grow gap-y-2 md:gap-y-">
              <div class="col-start-1 col-span-2 row-start-1 text-white-900 
                  text-lg font-semibold self-end">
                <p class="line-clamp-2 w-full"><%= item.product.name %></p>

              </div>
              <p class="col-start-1 row-start-2 col-span-2 text-sm text-gray-500 line-clamp-2 self-start">
                Quantity: <%= item.quantity %>
              </p>
              <p class="col-start-1 md:col-start-3 col-span-2 row-span-2 text-lg md:text-xl font-semibold text-white-900 text-right w-full line-clamp-1">
                <%= formatCurrency(item.product.price) %>
              </p>
            </div>
          </li>
          <% }); %>
        </ul>
      </div>
    </div>
  </div>
</section>