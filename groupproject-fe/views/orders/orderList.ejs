<% function renderStatusColor(statusStr) { %>
<% if (statusStr == "active") { %>
<% return "bg-emerald-500" %>
<% } else if (statusStr == "delivered") { %>
<% return "bg-blue-500" %>
<% } else { %>
<% return "bg-rose-500" %>
<% } %>
<% } %>
<section class="grid grid-cols-1 lg:grid-cols-3 sm:grid-cols-2 
w-screen
items-center justify-items-center gap-6 lg:gap-10 px-6 sm:px-12 lg:px-24 mx-auto my-32">
  <h1 class="col-span-full text-center text-3xl md:text-5xl font-bold mb-8 text-white">
    <%= title %>
  </h1>
  <% orders.forEach(order => { %>
  <div class="h-64 w-full flex flex-col gap-4 bg-white shadow-md rounded-lg p-6">
    <div class="flex justify-between gap-2 w-full">
      <h2 class="text-xl font-bold text-gray-800 w-full block line-clamp-1 text-ellipsis">
        <%= order._id %>
      </h2>
      <div class="inline-flex items-center text-sm font-semibold rounded-full shadow-lg <%= renderStatusColor(order.status) %> px-3 py-1">
        <%= order.status.charAt(0).toUpperCase() + order.status.slice(1) %>
      </div>
    </div>

    <h4 class="text-gray-700 font-semibold">Total Price: <%= formatCurrency(order.total_price) %></h4>
    <p class="text-sm text-gray-600"><strong>Created At:</strong> <%= formatDate(order.createAt) %></p>
    <div class="text-blue-500 hover:text-blue-700 cursor-pointer"><a href="<%= navigatePage('order-detail', order._id) %>">Details â†’</a></div>
  </div>
  <% }) %>
</section>