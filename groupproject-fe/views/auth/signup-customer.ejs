<section class="bg-gray-900 h-auto">
  <div class="flex justify-center md:justify-start w-full p-10"> <a href="/"><span
        class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800 p-10 "><i
          class="fa-solid fa-house mr-1"></i>Home</span></a>
  </div>
  <div class="flex flex-col items-center justify-center px-6 py-6 mx-auto -mt-20 mb-5 lg:py-0">
    <a href="#" class="flex items-center mb-6 text-2xl font-semibold text-white">
      <img class="w-40 mr-2" src="img/1.png" alt="logo">
    </a>
    <div class="w-full rounded-lg shadow border md:mt-0 sm:max-w-md xl:p-0 bg-gray-800 border-gray-700">
      <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
        <h1 class="text-xl font-bold leading-tight tracking-tight md:text-2xl text-white">
          Sign up for a Customer account
        </h1>
        <h2 class="text-lg font-bold leading-tight tracking-tight md:text-xl">
          <a href="/login" class="text-blue-600">
            Already have an account?
          </a>
        </h2>
        <form class="space-y-3" action="/signup-customer" method="POST">
          <div>
            <input type="text" hidden value="customer" name="role">
          </div>
          <div>
            <label for="username" class="block mb-2 text-sm font-medium text-white">Username</label>
            <input type="text" name="username" id="username"
              class="bg-gray-700 border border-gray-600 placeholder-gray-400 text-white invalid:border-red-500 invalid:text-red-600 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
              placeholder="userName123" pattern="[a-zA-Z0-9]{8,15}" required>
            <p class="text-xs pt-2 text-gray-400">Must be 8 to 15 characters</p>
          </div>
          <div>
            <label for="password" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Password</label>
            <input type="password" id="password"
              class="bg-gray-700 border border-gray-600 placeholder-gray-400 text-white invalid:border-red-500 invalid:text-red-600 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
              required placeholder="••••••••"
              pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[!@#$%^&*])[a-zA-Z\d!@#$%^&*]{8,20}$">
            <div class="text-xs pt-2 text-gray-400">
              <ul>
                <li>At least one upper case letter</li>
                <li>At least one lower case letter</li>
                <li>At least one digit</li>
                <li>At least one special letter in this set "!@#$%^&*"</li>
                <li>Must be 8 to 20 characters</li>
              </ul>
            </div>
          </div>
          <!-- Additional field for customer -->
          <div class="customer-info role-info" id="name-field">
            <div class="inputBox">
              <label for="name" class="block mb-2 text-sm font-medium text-white">Your
                Name</label>
              <input type="text"
                class="bg-gray-700 border border-gray-600 placeholder-gray-400 text-white invalid:border-red-500 invalid:text-red-600 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
                id="name" name="name" placeholder="John Doe" minlength="5">
              <p class="text-xs pt-2 text-gray-400">Must be at least 5 characters</p>
            </div>
          </div>

          <div class="customer-info role-info" id="name-field">
            <div class="inputBox">
              <label for="address" class="block mb-2 text-sm font-medium text-white">Your
                Address</label>
              <input type="text"
                class="bg-gray-700 border border-gray-600 placeholder-gray-400 text-white invalid:border-red-500 invalid:text-red-600 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
                id="address" name="address" placeholder="615 Magnolia Blvd" minlength="5">
              <p class="text-xs pt-2 text-gray-400">Must be at least 5 characters</p>
            </div>
          </div>
          <!-- Image upload field -->
          <div class="inputBox">
            <label for="avatar" class="block mb-2 text-sm font-medium text-white">Your Profile
              Picture</label>
            <input type="file"
              class="block w-full text-sm text-gray-400 border border-gray-600 rounded-lg cursor-pointer bg-gray-700 focus:outline-none placeholder-gray-400 py-2"
              id="avatar" name="avatar">
          </div>
          <button type="submit"
            class="w-full text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-800 font-medium rounded-lg text-sm px-5 py-2.5 mt-5 text-center">Sign
            up</button>
        </form>
      </div>
    </div>
  </div>
</section>
<script src="javascript/signup.js"></script>