<div class="bg-gray-100 shadow-gray-700 shadow-lg rounded-lg w-full md:max-w-sm flex flex-col relative">
  <a href="<%= navigatePage(" product", product._id) %>" class="overflow-hidden rounded-t-lg ">
    <img src="<%= product.image %>" alt="<%= product.name %> Image"
      class="w-full h-56 md:h-52 object-cover hover:scale-150 transition duration-1000">
  </a>
  <div class="px-3 pt-3 pb-5 flex flex-col gap-2 h-auto flex-grow">
    <h3 class="text-lg font-bold line-clamp-1 text-gray-800">
      <%= product.name %>
    </h3>
    <p class="text-sm text-gray-500 line-clamp-1 mt-0">
      <%= product.category %>
    </p>
    <h4 class="text-red-600 line-clamp-1 font-semibold mt-0">
      <%= formatCurrency(product.price) %>
        <span class="<%= product.stock > 0 ? 'text-green-600' : 'text-red-600' %> font-semibold">
          - <%= product.stock> 0 ? product.stock + ' In Stock' : 'Out of Stock' %>
        </span>
    </h4>
    <p class="text-sm text-gray-800 mb-10 line-clamp-1 md:line-clamp-2">
      <%= product.description %>
    </p>
  </div>
  <div class="absolute bottom-4 left-4 tracking-wide
  text-blue-600 hover:text-blue-800 hover:scale-105 hover:tracking-normal
  transition duration-300
  cursor-pointer" title="View Products">
    <a href="<%= navigatePage(" product", product._id) %>"> Details â†’</span></a>
  </div>
</div>