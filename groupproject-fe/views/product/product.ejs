<section class="overflow-hidden bg-gray-900 py-11">
  <div class="max-w-6xl px-4 py-4 mx-auto lg:py-8 md:px-6">
    <div class="flex flex-wrap -mx-4">
      <div class="w-full mb-8 md:w-1/2 md:mb-0">
        <div class="sticky top-0 z-50 overflow-hidden ">
          <div class="relative mb-6 lg:mb-10 aspect-square mx-auto p-4 md:p-0 max-w-[90%] sm:max-w-full">
            <img src="<%= product.image %>" alt="Main Product Image" class="object-cover w-full h-full">
          </div>
        </div>
      </div>
      <div class="w-full px-4 md:w-1/2 ">
        <div class="lg:pl-20">
          <div class="mb-8 ">
            <h2 class="max-w-xl mb-6 text-2xl font-bold text-gray-400 md:text-4xl">
              <%= product.name %>
            </h2>
            <p class="inline-block mb-6 text-4xl font-bold text-gray-400 ">
              <span>
                <%= product.price %>â‚«
              </span>
            </p>
            <p class="max-w-md text-gray-400">
              <%= product.description %>
            </p>
          </div>
        </div>
        <div class="flex items-center gap-4 lg:pl-20">
          <form action="/cart" method="">
            <input type="hidden" name="id" value="<%= product.id %>
              ">
            <input type="hidden" name="name" value="<%= product.name %>
              ">
            <input type="hidden" name="price" value="<%= product.price %>
              ">
            <div class="w-32 mb-8">
              <label for="quantity" class="block text-xl font-semibold text-gray-400">
                <span class="border-b border-gray-600">Quantity</span>
              </label>
              <div class="inline-flex mt-2">
                <div
                  class="inline-flex items-center justify-center w-10 h-10 bg-gray-600 border rounded-l-md border-gray-600 cursor-pointer select-none" id="decrease" onclick="decreaseValue()" value="Decrease Value">-</div>
                <input type="number"
                  class="w-10 h-10 text-center border-t border-b border-gray-500 bg-gray-500 appearance-none focus:outline-none"
                  id="number" value="1" />
                <div
                  class="inline-flex items-center justify-center w-10 h-10 bg-gray-600 border rounded-r-md border-gray-600 cursor-pointer select-none"
                  id="increase" onclick="increaseValue()" value="Increase Value">+</div>
              </div>
            </div>
            <button
              class="font-semibold flex items-center justify-center w-full p-4 rounded-md  text-gray-200 border-blue-600 bg-blue-600 hover:bg-blue-700 hover:border-blue-700 hover:text-gray-300"
              type="submit">
              Add to cart</button>
          </form>

        </div>
      </div>
    </div>
  </div>
</section>