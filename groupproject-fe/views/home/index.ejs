<section class="bg-gray-900">
    <div class="grid max-w-screen-xl px-4 py-8 mx-auto lg:gap-8 xl:gap-0 lg:py-16 lg:grid-cols-12">
        <div class="mr-auto place-self-center lg:col-span-7 md:mx-auto">
            <h1 class="max-w-2xl mb-4 text-3xl font-extrabold tracking-tight leading-none md:text-5xl xl:text-6xl text-center lg:text-left text-white">Experience the Future with 1080p Technology</h1>
            <p class="max-w-2xl mb-6 font-light text-gray-400 lg:mb-8 md:text-lg text-center lg:text-left lg:text-xl">Your trusted partner in bringing the most sophisticated and latest electronics right to your doorstep.</p>
            <div class="flex justify-center items-center lg:justify-start">
                <a href="#" class="inline-flex items-center justify-center px-5 py-3 mr-3 text-base font-medium text-center text-white rounded-lg bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:ring-primary-900">
                    Shop Now
                    <svg class="w-5 h-5 ml-2 -mr-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
                </a>
                <a href="#" class="inline-flex items-center justify-center px-5 py-3 text-base font-medium text-center text-white border border-gray-700 rounded-lg hover:bg-gray-700 focus:ring-4 focus:ring-gray-800">
                    Speak to Sales
                </a> 
            </div>           
        </div>
        <div class="hidden lg:mt-0 lg:col-span-5 lg:flex">
            <img src="img/iphone.png" alt="mockup">
        </div>                
    </div>
</section>
<div class="flex justify-center">
    <!-- Bao -->
    <section class="grid grid-cols-1 lg:grid-cols-3 md:grid-cols-2 items-center justify-items-center gap-y-10 mt-2 mb-5 mx-auto md:max-w-xl lg:max-w-full lg:mx-0">
        <h2 class="col-span-full text-center text-4xl mb-4 md:text-5xl font-bold md:mb-8">Trending Products</h2>
        <% products.forEach(function(product){ %>
          <div class="bg-gray-100 shadow-sm rounded-lg w-3/4 md:max-w-sm flex flex-col relative">
              <img src="<%= product.image %>" alt="<%= product.name %>" class="w-full h-48 object-cover rounded-t-lg">
            <div class="p-3 flex flex-col gap-2 h-auto flex-grow">
                <h3 class="text-lg font-bold line-clamp-1 text-gray-800">
                    <%= product.name %>
                </h3>
                <p class="text-sm text-gray-500 line-clamp-1 mt-0">
                  <%= product.category %>
                </p>
                <h4 class="text-red-600 line-clamp-1 font-semibold mt-0">
                    <%= product.price %>₫ 
                    <span class="<%= product.stock > 0 ? 'text-green-600' : 'text-red-600' %> font-semibold">
                        - <%= product.stock > 0 ? product.stock + ' In Stock' : 'Out of Stock' %>
                    </span>
                </h4>
                <p class="text-sm text-gray-800 mb-10 line-clamp-1 md:line-clamp-2">
                    <%= product.description %>
                </p>      
            </div>
            <div class="absolute bottom-4 left-4 text-blue-600 hover:text-blue-800 cursor-pointer" title="View Products">
                Details →
            </div>
            <div class="absolute bottom-4 right-4 text-blue-600" title="Add To Cart">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-bag-plus" viewBox="0 0 16 16"><path fill-rule="evenodd" d="M8 7.5a.5.5 0 0 1 .5.5v1.5H10a.5.5 0 0 1 0 1H8.5V12a.5.5 0 0 1-1 0v-1.5H6a.5.5 0 0 1 0-1h1.5V8a.5.5 0 0 1 .5-.5z" /><path d="M8 1a2.5 2.5 0 0 1 2.5 2.5V4h-5v-.5A2.5 2.5 0 0 1 8 1zm3.5 3v-.5a3.5 3.5 0 1 0-7 0V4H1v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V4h-3.5zM2 5h12v9a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V5z" /></svg>
            </div>   
        </div>
      <% }); %>      
    </section>
</div>
