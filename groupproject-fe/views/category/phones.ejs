<section class="relative">
    <img src="https://images.unsplash.com/photo-1634403665443-81dc4d75843a?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1332&q=80" alt="" class="object-cover object-center w-full h-[300px]">
    <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2">
</section>
<section class="flex flex-col w-full lg:flex-row my-5">
    <!-- Filter Sidebar -->
    <aside class="hidden md:max-lg:block lg:block w-full lg:w-1/4 p-4 bg-gray-900 lg:mt-20 md:max-lg:center-and-half">
        <h2 class="mb-4 text-xl font-bold text-white">Filter Products</h2>
  
        <!-- Categories Filter -->
        <div class="mb-4">
            <h3 class="mb-2 text-lg font-semibold text-gray-400">Categories</h3>
            <ul class="space-y-2">
                <li><input type="checkbox" id="cat1" name="category" value="Category 1"> <label for="cat1" class="text-gray-300">Category 1</label></li>
                <li><input type="checkbox" id="cat2" name="category" value="Category 2"> <label for="cat2" class="text-gray-300">Category 2</label></li>
                <!-- add more categories as necessary -->
            </ul>
        </div>
  
        <!-- Price Range Filter -->
        <div class="mb-4">
            <h3 class="mb-2 text-lg font-semibold text-gray-400">Price Range</h3>
    
            <div class="flex items-center justify-between mb-2">
                <span class="text-gray-300">Min Price: </span>
                <span id="min-price-label" class="text-gray-300">0</span>
            </div>
            <input type="range" id="min-price" name="min-price" min="0" max="50000000" value="0" class="w-full slider mb-2 bg-gray-800 text-white border-gray-700" step="100000">
        
            <div class="flex items-center justify-between mb-2">
                <span class="dark:text-gray-300">Max Price: </span>
                <span id="max-price-label" class="dark:text-gray-300">50000000</span>
            </div>
            <input type="range" id="max-price" name="max-price" min="0" max="50000000" value="50000000" class="w-full slider mb-2 bg-gray-800 text-white border-gray-700" step="100000">
        </div>
      
        <!-- Other Filters -->
        <!-- Add other filters as necessary -->
      
        <!-- Filter Button -->
        <button type="button" class="w-full py-2 font-bold text-white bg-blue-800">Apply Filters</button>
        <button type="button" id="reset-filters" class="w-full py-2 mt-2 font-bold text-white bg-blue-800">Reset Filters</button>
    </aside>
    <div class="flex justify-center w-full lg:w-3/4">
        <!-- Bao -->
        <section
            class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 md:grid-cols-2 items-center justify-items-center gap-y-10 mt-2 mx-auto md:max-w-xl lg:max-w-full lg:mx-0">
            <h2 class="col-span-full text-center text-4xl mb-4 md:text-5xl font-bold md:mb-6">Smartphones</h2>
            <% products.forEach(function(product){ %>
                <div class="bg-gray-100 shadow-sm rounded-lg w-3/4 md:max-w-sm flex flex-col relative">
                    <img src="<%= product.image %>" alt="<%= product.name %>" class="w-full h-48 object-cover rounded-t-lg">
                    <div class="p-3 flex flex-col gap-2 h-auto flex-grow">
                        <h3 class="text-lg font-bold line-clamp-1 text-gray-800">
                            <%= product.name %>
                        </h3>
                        <p class="text-sm text-gray-500 line-clamp-1 mt-0">
                            <%= product.category %>
                        </p>
                        <h4 class="text-red-600 line-clamp-1 font-semibold mt-0">
                            <%= product.price %>₫
                                <span class="<%= product.stock > 0 ? 'text-green-600' : 'text-red-600' %> font-semibold">
                                    - <%= product.stock> 0 ? product.stock + ' In Stock' : 'Out of Stock' %>
                                </span>
                        </h4>
                        <p class="text-sm text-gray-800 mb-10 line-clamp-1 md:line-clamp-2">
                            <%= product.description %>
                        </p>
                    </div>
                    <div class="absolute bottom-4 left-4 text-blue-600 hover:text-blue-800 cursor-pointer"
                        title="View Products">
                    <a href="/detail">
                        Details →
                    </a>                   
                    </div>
                    <div class="absolute bottom-5 right-4 text-blue-600" title="Add To Cart">
                        <i class="fa-solid fa-cart-plus fa-xl"></i>
                    </div>
                </div>
                <% }); %>
        </section>
    </div>
</section>